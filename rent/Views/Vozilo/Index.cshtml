@model IEnumerable<rent.Models.Vozilo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Godiste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojSjedista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipGoriva)
            </th>
            <th>
                Slika
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVlasnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocjena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Godiste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojSjedista)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipGoriva)
                </td>
                <td>
                    <img src="@item.ImagePath" alt="Vozilo Image" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVlasnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ocjena)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdResursa">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdResursa">Details</a> |
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.IdResursa">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
