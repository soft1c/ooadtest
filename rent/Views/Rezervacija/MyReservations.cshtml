@using rent.Models
@model rent.Models.ViewModels.ReservationsViewModel

@{
    ViewData["Title"] = "Moje rezervacije";
}

<h1>Moje rezervacije</h1>

<h2>Moje rezervacije</h2>
<table class="table">
    <thead>
        <tr>
            <th>Resurs</th>
            <th>Početak</th>
            <th>Kraj</th>
            <th>Status</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MojeRezervacije)
    {
        <tr>
            <td>
                <a asp-controller="Resurs" asp-action="Details" asp-route-id="@item.IdResursa">
                    @item.Resurs.Naziv
                </a>
            </td>
            <td>@item.Pocetak.ToShortDateString()</td>
            <td>@item.Kraj.ToShortDateString()</td>
            <td>@item.Status</td>
            <td>
                @if (item.Status == Status.Zavrseno|| 1==1)
                {
                    <a asp-controller="Recenzija" asp-action="Create" asp-route-id="@item.IdResursa" class="btn btn-primary">Ostavi recenziju</a>
                }
            </td>
        </tr>
    }
</tbody>
</table>

<h2>Zahtjevi za rezervacije</h2>
<table class="table">
    <thead>
        <tr>
            <th>Resurs</th>
            <th>Korisnik</th>
            <th>Početak</th>
            <th>Kraj</th>
            <th>Status</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RezervacijeOdMene)
        {
            <tr>
                <td>
                    <a asp-controller="Resurs" asp-action="Details" asp-route-id="@item.IdResursa">
                        @item.Resurs.Naziv
                    </a>
                </td>
                <td>@item.IdOsobe</td>
                <td>@item.Pocetak.ToShortDateString()</td>
                <td>@item.Kraj.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    @if(item.Status == rent.Models.Status.UObradi)
                    {
                        <form asp-action="UpdateReservationStatus" method="post">
                            <input type="hidden" name="id" value="@item.IdRezervacije" />
                            <button type="submit" name="accept" value="true" class="btn btn-success">Prihvati</button>
                            <button type="submit" name="accept" value="false" class="btn btn-danger">Odbij</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
